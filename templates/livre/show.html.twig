{% extends 'base.html.twig' %}

{% block title %}Détails du Livre{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Détails du Livre</h1>

        <table class="table table-bordered">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Référence</th>
                <td>{{ livre.ref }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.title }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ livre.author.username }}</td>
            </tr>
            <tr>
                <th>Email de l'Auteur</th>
                <td>{{ livre.author.email }}</td>
            </tr>
            <tr>
                <th>Nombre de Livres</th>
                <td>{{ livre.author.nb_books }}</td>
            </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-4">
            <a class="btn btn-primary" href="{{ path('app_livre_index') }}">Retour à la liste</a>
            <a class="btn btn-warning" href="{{ path('app_livre_edit', {'id': livre.id}) }}">Modifier</a>
        </div>

        {{ include('livre/_delete_form.html.twig') }}
    </div>
{% endblock %}
